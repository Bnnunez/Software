<p id="notice"><%= notice %></p>

<h1>Product Specifications</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Price</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_specifications.each do |product_specification| %>
      <tr>
        <td><%= product_specification.size %></td>
        <td><%= product_specification.price %></td>
        <td><%= product_specification.product.name %></td>
        <td><%= link_to 'Show', product_specification %></td>
        <td><%= link_to 'Edit', edit_product_specification_path(product_specification) %></td>
        <td><%= link_to 'Destroy', product_specification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Specification', new_product_specification_path %>
