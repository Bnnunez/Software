
<div class="back_page">
  <div style="padding-top:6em;">

    <%= form_for @product, html: {multipart: true} do |f| %>

      <div class="container_form">
        <div class="sky-form" style="min-width: 450px; max-width:700px; margin:10px; ">
          <header> Formulario de Productos <%= link_to 'Volver a Productos', products_path, class:"btn", style:"padding-left:30%;" %></header>

            <header> Información <header>
              <% if product.errors.any? %>
                <div id="error_explanation" style="word-wrap: break-word; background-color=green; border-radius:10px" >>
                  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

                  <ul>
                  <% product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
          <fieldset>
            <section>
              <div class="input">
                Nombre del Producto
                <%= f.text_field :name, style:"width:100%"  %>

              </div>
            </section>

            <section>
              <div class="input">

                Descripción del Producto

                <%= f.text_area :description, style:"width:100%" %>

              </div>
            </section>

            <section>
              <div class="input-file">
                Imagen principal del producto
                <center>
                  <%= f.file_field :image, style:"border: 1px solid; padding:2px; ",class:"button-secondary"%> </center>

              </div>
            </section>

            <section>
              <div class="input-file">
                Otras imagenes del producto
                <center>
                   <%= file_field_tag "photos[]", type: :file, style:"border: 1px solid; padding:2px; ", multiple: true %>
                </center>

              </div>
            </section>


          </fieldset>





        <footer class="text-center">
          <%= f.submit "Crear", class:"btn" %>



        </footer>
        </div>
        </div>
      </div>

      <%end%>


  </div>
</div>
